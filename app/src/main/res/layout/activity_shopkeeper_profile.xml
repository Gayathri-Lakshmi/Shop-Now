<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShopkeeperProfile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <ImageButton
                android:id="@+id/img_skEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="300dp"
                android:background="#00FFFFFF"
                android:onClick="skEdit"
                android:src="@drawable/ic_baseline_edit_24">

            </ImageButton>
            <TextView
                android:id="@+id/skprofile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColorHint="#D3503088"
                android:textColor="#D3503088"
                android:textSize="10sp"
                android:layout_marginStart="20dp" />

            <EditText
                android:id="@+id/cNameProfile"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColorHint="#D3503088"
                android:textColor="#D3503088"
                android:enabled="false"
                android:inputType="textPersonName"
                android:text=""
                android:layout_marginStart="20dp" />
            <TextView
                android:id="@+id/skprofileshop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shop Name"
                android:textSize="10sp"
                android:textColor="#D3503088"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp" />

            <EditText
                android:id="@+id/skShopNameProfile"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:textColor="#D3503088"
                android:inputType="textPersonName"
                android:text=""
                android:layout_marginStart="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone No."
                android:textSize="10sp"
                android:textColor="#D3503088"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp" />

            <EditText
                android:id="@+id/skPhoneProfile"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColor="#D3503088"
                android:enabled="false"
                android:inputType="textPersonName"
                android:text=""
                android:layout_marginStart="20dp" />
            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.255"
                tools:layout_editor_absoluteX="0dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_location_on_24">

                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="serif"
                    android:text="Loctaion"
                    android:textColor="#9F503088"
                    android:textSize="25sp"
                    android:textStyle="bold">

                </TextView>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address Line"
                android:textSize="10sp"
                android:textColor="#D3503088"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp" />

            <EditText
                android:id="@+id/skAddProfile"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColor="#D3503088"
                android:enabled="false"
                android:inputType="textMultiLine"
                android:text=""
                android:layout_marginStart="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="District or City"
                android:textSize="10sp"
                android:textColor="#D3503088"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp" />

            <EditText
                android:id="@+id/skDistProfile"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:textColor="#D3503088"
                android:inputType="textPersonName"
                android:text=""
                android:layout_marginStart="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="State"
                android:textSize="10sp"
                android:textColor="#D3503088"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp" />

            <EditText
                android:id="@+id/skStateProfile"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:textColor="#D3503088"
                android:inputType="textPersonName"
                android:text=""
                android:layout_marginStart="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pin Code"
                android:textSize="10sp"
                android:textColor="#D3503088"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp" />

            <EditText
                android:id="@+id/skPinProfile"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:textColor="#D3503088"
                android:inputType="textPersonName"
                android:text=""
                android:layout_marginStart="20dp" />
            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#AE9C27B0"
                android:layout_marginStart="10dp"
                android:text="What requirements your shop meets?"
                android:textSize="15sp">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:id="@+id/sk_marketP"
                    android:textColor="#D3503088"
                    android:enabled="false"
                    android:text="Supermarket">

                </CheckBox>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sk_medicalsP"
                    android:enabled="false"
                    android:textColor="#D3503088"
                    android:layout_marginStart="50dp"
                    android:text="Medicals">

                </CheckBox>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#D3503088"
                android:orientation="horizontal">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:id="@+id/sk_dairyP"
                    android:enabled="false"
                    android:textColor="#D3503088"
                    android:text="Dairy">

                </CheckBox>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="100dp"
                    android:id="@+id/sk_storeP"
                    android:textColor="#D3503088"
                    android:enabled="false"
                    android:text="Fruits and vegetables">

                </CheckBox>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="backSk"
                    android:text="Back"
                    android:backgroundTint="#81673AB7"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="110dp">

                </Button>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="skProfileSave"
                    android:text="Save"
                    android:backgroundTint="#81673AB7"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp">

                </Button>


            </LinearLayout>





        </LinearLayout>



    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>