<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddItem">

    <EditText
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:id="@+id/iname"
        android:textColorHint="#D3503088"
        android:textColor="#D3503088"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:hint="@string/enter_item_name">

    </EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/iqty"
        android:layout_marginTop="10dp"
        android:textColorHint="#D3503088"
        android:textColor="#D3503088"
        android:textSize="20dp"
        android:hint="Enter Quantity"
        >

    </EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/iprice"
        android:layout_marginTop="10dp"
        android:textColorHint="#D3503088"
        android:textColor="#D3503088"
        android:textSize="20dp"
        android:hint="Enter Price"
        android:inputType="number">

    </EditText>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="150dp"
                android:tag="AddImage"
                android:backgroundTint="@color/cardview_shadow_start_color"
                android:layout_marginStart="5dp"
                android:layout_height="150dp"
                app:srcCompat="@color/cardview_shadow_start_color"
                android:id="@+id/image">

            </ImageView>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:onClick="ok"
                android:textColor="#9C27B0"
                android:backgroundTint="@color/common_google_signin_btn_text_dark_disabled"
                android:layout_marginStart="35dp"
                android:text="Save Image">

            </Button>
        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:orientation="vertical">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="camera"
                android:textColor="#9C27B0"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/common_google_signin_btn_text_dark_disabled"
                android:text="Click Picture from the Camera">

            </Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="gallery"
                android:textColor="#9C27B0"
                android:backgroundTint="@color/common_google_signin_btn_text_dark_disabled"
                android:layout_marginTop="10dp"
                android:text="Select Picture from the Gallery">

            </Button>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_marginStart="50dp"
            android:textColor="#BE121015"
            android:backgroundTint="#81673AB7"
            android:onClick="saveItem"
            android:textSize="20dp"
            android:text="Save">

        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="cancelAdd"
            android:layout_gravity="center"
            android:layout_marginStart="80dp"
            android:textColor="#BE121015"
            android:textSize="20dp"

            android:backgroundTint="#81673AB7"
            android:layout_marginTop="10dp"
            android:text="Cancel">

        </Button>

    </LinearLayout>


</LinearLayout>