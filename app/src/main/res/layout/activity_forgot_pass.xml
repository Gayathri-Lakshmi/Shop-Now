<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPass">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter the Phone Number to get the Verification Code"
        android:textSize="20sp"
        android:textColorHint="#D3503088"
        android:textColor="#D3503088"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.154"
        tools:layout_editor_absoluteX="0dp">

    </TextView>

    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColorHint="#D3503088"
        android:textColor="#D3503088"
        app:layout_constraintVertical_bias="0.278"
        app:startIconDrawable="@drawable/ic_baseline_call_24"
        tools:layout_editor_absoluteX="0dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:id="@+id/Pphone"
            android:textColorHint="#D3503088"
            android:textColor="#D3503088"
            android:layout_height="wrap_content"
            android:inputType="phone">

        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#D3503088"
        android:text="Please make a choice"
        android:textColor="#9C27B0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.379"
        tools:layout_editor_absoluteX="-16dp">

    </TextView>


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:textColorHint="#D3503088"
        android:textColor="#D3503088"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.436"
        tools:layout_editor_absoluteX="-16dp">

        <RadioButton
            android:id="@+id/Fcust"
            android:layout_width="wrap_content"
            android:textColorHint="#D3503088"
            android:textColor="#D3503088"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:text="Customer">

        </RadioButton>

        <RadioButton
            android:id="@+id/Fsk"
            android:layout_width="wrap_content"
            android:textColorHint="#D3503088"
            android:textColor="#D3503088"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:text="Shopkeeper">

        </RadioButton>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="sendcode"
        android:text="Send Code"
        android:backgroundTint="#81673AB7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.581">

    </Button>


</androidx.constraintlayout.widget.ConstraintLayout>